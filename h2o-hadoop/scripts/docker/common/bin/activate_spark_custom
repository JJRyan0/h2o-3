#! /bin/bash

set -e

DEFAULT_CUSTOM_SPARK_PATH=/opt/spark-custom
custom_spark_path=${DEFAULT_CUSTOM_SPARK_PATH}
if [[ ${1} != '' ]]; then
    custom_spark_path=${1}
fi

ln -s ${custom_spark_path} /opt/spark-current
echo -e "Activating Spark \033[91mCUSTOM\033[0m under \033[91m${custom_spark_path}\033[0m"
